<div class="ibox float-e-margins">
    <div>
        <h5><%='Add Article'; %></h5>
    </div>
    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-4 m-b-xs">
                <a class='btn btn-primary' escape href="<%= %>"><i class="glyphicon glyphicon-list-alt"></i> <%=  'List Article' %> </a>
            </div>
        </div>

        <div class="box-body">
            <form method="post" class='form-horizontal' encType="multipart/form-data" novalidate='novalidate'>
                <input type="hidden" name="_csrf" value="<%= 'fakeCSRf' %>">
                <div class="form-group ">
                    <label class="col-md-2 control-label" for="name"><%= 'Name'; %><span class="text-danger">(*)</span></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="name" required="required" name="name" placeholder="<%= 'Name' %>" value="" />
                    </div>
                </div>
                <div class="form-group ">
                    <label class="col-md-2 control-label" for="title"><%= 'Title'; %><span class="text-danger">(*)</span></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="title" required="required" name="title" placeholder="<%= 'Title'; %>" value="" />
                    </div>
                </div>
                <div class="form-group ">
                    <label class="col-md-2 control-label" for="description"><%= 'Description'; %><span class="text-danger">(*)</span></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="description" required="required" name="description" placeholder="<%= 'Description' %>" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="active"><%= 'Active' %></label>
                    <div class="col-md-10">
                        <input  checked="checked" class ='checkbox i-checks' type="checkbox" data-toggle="toggle" id="active" name="status" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><label for="thumbnail">Thumbnail <span class="text-danger">(*)</span></label></label>
                    <div class="col-sm-10"><input type="file" name="thumbnail" accept="image/x-png, image/gif, image/jpeg , image/jpg" id="thumbnail"></div>
                </div>

                    <div class="form-group ">
                        <div class="row col-sm-6 col-sm-offset-2">
                            <button type="reset" class="btn btn-white" name="reset">Rest</button>
                            <button type="button" class="btn btn-primary btn-save" name="save"><i class="fa fa-save"></i>Save</button>
                        </div>
                    </div>
            </form>
        </div>

    </div>
</div>
